{
  "position": "top",
  "layer": "top",
  "height": 18,
  "margin-top": 0,
  "margin-bottom": 0,
  "margin-left": 0,
  "margin-right": 0,
  "modules-left": ["custom/launcher", "hyprland/workspaces", "hyprland/window"],
  "modules-center": ["mpris"],
  "modules-right": ["tray", "group/pc-info", "group/system-info", "clock"],

  "mpris": {
      "format": "{player_icon}  {dynamic}",
      "format-paused": "{status_icon}  {dynamic}",
      "player-icons": { 
          "default": "Û∞êå ",
          "mpv": "üéµ"
      },
      "status-icons": {
          "paused": "Û∞è• "
      },
      "max-length": 40,
      "interval": 0.5
  },

  // Modules configuration
  "custom/launcher": {
    "format": "ÔÖº",
    "on-click": "rofi -show drun" 
  },

  "hyprland/workspaces": {
    "active-only": false,
    "disable-scroll": true,
    "format": "{name}",
    "on-click": "activate",
  },

  "hyprland/window": {
      "format": "{class}: {title}",
